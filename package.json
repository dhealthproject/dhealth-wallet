        "utf-8-validate": "^5.0.5",
        "vue-jest": "^3.0.5",
        "vue-template-compiler": "^2.6.10"
    },
    "build": {
        "appId": "network.dhealth.wallet",
        "extends": null,
        "copyright": "Copyright © 2021 dHealth Network",
        "productName": "dHealth Wallet",
        "artifactName": "${name}-${os}-${arch}-${version}.${ext}",
        "icon": "./dist/assets/icons/Icon.icns",
        "files": [
            "dist/**/*",
            "package.json",
            "public/plugins",
            "public/bundler.js",
            "public/preload.js"
        ],
        "directories": {
            "buildResources": "assets",
            "output": "release"
        },
        "npmRebuild": false,
        "protocols": [
            {
                "name": "network.dhealth.wallet",
                "schemes": [
                    "web+symbol",
                    "web+dhealth",
                    "symbol",
                    "dhealth"
                ]
            }
        ]
    },
    "dmg": {
        "window": {
            "x": 100,
            "y": 100,
            "width": 500,
            "height": 400
        }
    },
    "mac": {
        "category": "public.app-category.finance",
        "target": "dmg",
        "icon": "./dist/assets/icons/Icon.icns",
        "hardenedRuntime": true,
        "gatekeeperAssess": false,
        "asarUnpack": [
            "**/*.node"
        ],
        "entitlements": "./electron/entitlements.mac.plist",
        "extendInfo": {
            "NSCameraUsageDescription": "This app requires camera access to scan qrcodes.",
            "CFBundleURLSchemes": [
                "network.dhealth.wallet",
                "web+symbol",
                "web+dhealth",
                "symbol",
                "dhealth"
            ]
        }
    },
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "publisherName": "dHealth Network",
        "installerIcon": "./dist/assets/icons/favicon.dhealth.ico"
    },
    "linux": {
        "category": "Network",
        "icon": "./dist/assets/icons/Icon.icns"
    },
    "resolutions": {
        "@babel/preset-env": "7.5.5"
    }
}
